#:kivy 1.11.1
<AccelerometerTest>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.05
            Button:
                id: quit_button
                background_color: (0.5, 0.5, 0.5, 1)
                font_size: "22dp"
                text: 'Quitter'
                on_release: root.do_quit()
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            ToggleButton:
                group: 'action'
                size_hint_x: 0.50
                background_color: (1, 0, 1, 1)
                text: 'Escalier  Montée'
                color: (0, 1, 0, 1)
                font_size: "22dp"
                on_release: root.on_activity(0)
            ToggleButton:
                group: 'action'
                size_hint_x: 0.50
                background_color: (1, 0, 1, 1)
                text: 'Escalier  Descente'
                color: (0, 1, 0, 1)
                font_size: "22dp"
                on_release: root.on_activity(1)
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            ToggleButton:
                group: 'action'
                size_hint_x: 0.50
                background_color: (1, 0, 1, 1)
                text: 'Marche'
                color: (0, 1, 0, 1)
                font_size: "22dp"
                on_release: root.on_activity(2)
            ToggleButton:
                group: 'action'
                size_hint_x: 0.50
                background_color: (1, 0, 1, 1)
                text: 'Assis'
                color: (0, 1, 0, 1)
                font_size: "22dp"
                on_release: root.on_activity(3)
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.65
            Label:
                id: x_label
                font_size: "22dp"
                text: 'X: '
            Label:
                id: y_label
                font_size: "22dp"
                text: 'Y: '
            Label:
                id: z_label
                font_size: "22dp"
                text: 'Z: '
            Label:
                id: activity_label
                font_size: "22dp"
                text: 'Activité: '
            Label:
                id: number
                font_size: "22dp"
                text: ''
            Label:
                id: activ_sensor
                text: 'Capteur actif: '
            Label:
                id: file_saved
                text: 'Enregistrement de '
        BoxLayout:
            size_hint_y: 0.1
            ToggleButton:
                id: acceleromer_status
                font_size: "22dp"
                text: 'Start accelerometer'
                on_press: root.on_sensor_status()
